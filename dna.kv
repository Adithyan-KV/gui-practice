#:kivy 1.10.1
#:import utils kivy.utils

<AppWindow>:
    BoxLayout:
        Label:
            id:window
            bcolor: '#1a191b'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(self.bcolor)
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                pos:window.pos
                size:window.size
                padding:0.1*self.width
                rows:2

                GridLayout:
                    cols:2
                    size_hint_y:None
                    height:self.parent.height*0.2
                    spacing:0.2*self.width
                    TextInput:
                        size_hint_x:None
                        size_hint_y:None
                        height:40
                        width:self.parent.width*0.4
                        id:length_input
                        hint_text:"Enter length of sequence (eg:1000)"
                        multiline:False

                    Button:
                        id:generate_button
                        size_hint_x:None
                        size_hint_y:None
                        height:40
                        width:self.parent.width*0.4
                        text:'Generate'
                        background_normal:''
                        background_color:utils.get_color_from_hex("#6b7475")

                        on_press:
                            self.background_color=utils.get_color_from_hex("#111111")  #changing color of button on click
                        on_press:
                            self.seq:root.btn_clk_generate(length_input.text)
                        on_release:
                            self.background_color=utils.get_color_from_hex("#6b7475")

                # the scrollable label that displays the output
                ScrollView:

                    #giving background_color to the label
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#272628")
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        size_hint_x:None
                        width:self.parent.width
                        text:root.output_sequence
                        text_size:self.width,None   #horizontal wrapping
                        size_hint_y:None
                        height:self.texture_size[1] #making it scrollable
                        padding:(50,10)
                        valign:'middle'
                        halign:'center'
